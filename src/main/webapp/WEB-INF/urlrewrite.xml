<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite
    PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite>

	<!--
	<rule>
		<from>(.+)\.html</from>
		<set type="status">404</set>
		<to>null</to>
	</rule>
	-->

	<rule>
		<from>^/$</from>
		<to>/index.jsf</to>
	</rule>

	<rule>
		<from>^/home$</from>
		<to>/home.jsf</to>
	</rule>

	<rule>
		<from>^/login$</from>
		<to>/login.jsf</to>
	</rule>

	<rule>
		<from>^/signup$</from>
		<to>/signup.jsf</to>
	</rule>

	<rule>
		<from>^/password/recovery$</from>
		<to>/password-recovery.jsf</to>
	</rule>

	<rule>
		<from>^/password/reset$</from>
		<to>/password-reset.jsf</to>
	</rule>

	<rule>
		<from>^/user/activation$</from>
		<to>/user-activation.jsf</to>
	</rule>

	<rule>
		<from>^/user/profile$</from>
		<to>/user-profile.jsf</to>
	</rule>

	<rule>
		<from>^/user/health$</from>
		<to>/user-health.jsf</to>
	</rule>

	<rule>
		<from>^/registration/list$</from>
		<to>/registration-list.jsf</to>
	</rule>

	<rule>
		<from>^/registration$</from>
		<to>/registration.jsf</to>
	</rule>

	<rule>
		<from>^/race/next$</from>
		<to>/race-next.jsf</to>
	</rule>

	<rule>
		<from>^/race/(.*)/registration$</from>
		<to>/race-registration.jsf?race=$1</to>
	</rule>

	<rule>
		<from>^/race/(.*)$</from>
		<to>/race.jsf?race=$1</to>
	</rule>

	<rule>
		<from>^/(.+)/$</from>
		<to type="redirect">%{context-path}/$1</to>
	</rule>

</urlrewrite>