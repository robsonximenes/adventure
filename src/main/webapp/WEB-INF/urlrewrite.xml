<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite
    PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite>

	<!--
	<rule>
		<from>(.+)\.html</from>
		<set type="status">404</set>
		<to>null</to>
	</rule>
	-->

	<rule>
		<from>^/$</from>
		<to>/index.jsf</to>
	</rule>

	<rule>
		<from>^/home$</from>
		<to>/home.jsf</to>
	</rule>

	<rule>
		<from>^/login$</from>
		<to>/login.jsf</to>
	</rule>

	<rule>
		<from>^/signup$</from>
		<to>/signup.jsf</to>
	</rule>

	<rule>
		<from>^/activation$</from>
		<to>/activation.jsf</to>
	</rule>

	<rule>
		<from>^/register$</from>
		<to>/register.jsf</to>
	</rule>

	<rule>
		<from>^/reset$</from>
		<to>/reset.jsf</to>
	</rule>

	<rule>
		<from>^/password$</from>
		<to>/password.jsf</to>
	</rule>

	<rule>
		<from>^/profile$</from>
		<to>/profile.jsf</to>
	</rule>

	<rule>
		<from>^/race/(.*)/register$</from>
		<to>/register.jsf?race=$1</to>
	</rule>
	
	<!--
	<rule>
		<from>^/mobile$</from>
		<to>/mobile.html</to>
	</rule>

	<rule>
		<from>^/index$</from>
		<to>/index.html</to>
	</rule>index.html
	-->

	<!--
	<rule>
		<from>^(?:(?!\.\w+).)*$</from>
		<to>$1.html</to>
	</rule>

	<rule>
		<from>(/api/.+)$</from>
		<to>$0</to>
	</rule>
	-->

	<!--
	<rule>
		<from>^/$</from>
		<to type="redirect">%{context-path}/home</to>
	</rule>
	-->

	<rule>
		<from>^/(.+)/$</from>
		<to type="redirect">%{context-path}/$1</to>
	</rule>

</urlrewrite>